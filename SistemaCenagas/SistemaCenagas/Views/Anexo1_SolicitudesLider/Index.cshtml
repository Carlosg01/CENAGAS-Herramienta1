@{
    ViewData["Title"] = "Index";
}

<div class="main-container">

    <div class="navbar bg-white breadcrumb-bar">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Dashboard">Inicio</a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-controller="ProyectosLider" asp-action="Index">Mis proyectos</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Solicitudes de cambio</li>



            </ol>
        </nav>

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active" aria-current="page">
                    @(Global.usuario.Titulo + " " + Global.usuario.Nombre + " | " + (Global.usuario.Rol != null ? Global.usuario.Rol : "Sin asignación"))
                </li>
            </ol>
        </nav>

    </div>
    <div class="container">
        <div class="page-header mb-4">
            <div class="media">
                <div class="media-body ml-3">
                    <h2 class="mb-0">@(Global.proyecto.Nombre): Solicitudes de cambio</h2>
                </div>

            </div>

        </div>
        @if (Global.vistaAnexo1.Count() > 0)
        {
            <table style="display: block; overflow-x: auto; white-space: nowrap;" id="tblData" class="table table-bordered table-responsive-xl">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            Tipo de cambio
                        </th>
                        <th>
                            Fecha
                        </th>
                        <th>
                            Lider
                        </th>
                        <th>
                            Proponente
                        </th>
                        <th>
                            Responsable ADC
                        </th>
                        <th>
                            Estatus
                        </th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Global.vistaAnexo1)
                    {
                    <tr>
                        <td>
                            @(item.tipoCambio)
                        </td>
                        <td>
                            @(item.fecha)
                        </td>
                        <td>
                            @(item.lider)
                        </td>
                        <td>
                            @(item.proponente)
                        </td>
                        <td>
                            @(item.responsableADC)
                        </td>
                        <td>
                            @(item.estatus)
                        </td>
                        <td>
                            <a class="btn btn-dark form-control" asp-action="Edit" asp-route-id="@item.id_PropuestaCambio">Administrar</a>
                        </td>
                        <td>
                            <a class="btn btn-dark form-control" asp-action="Details" asp-route-id="@item.id_PropuestaCambio">Detalles</a>
                        </td>
                        <td>
                            <a class="btn btn-danger form-control" asp-action="Delete" asp-route-id="@item.id_PropuestaCambio">Eliminar</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <label class="control-label">No hay solicitudes de cambio registradas para este proyecto</label>
        }

    </div>
</div>