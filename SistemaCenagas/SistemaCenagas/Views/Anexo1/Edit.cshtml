@model SistemaCenagas.Models.Anexo1

@{
    ViewData["Title"] = "Edit";
}
<div class="main-container">

    <div class="navbar bg-white breadcrumb-bar">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Dashboard">Inicio</a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-controller="ADC" asp-action="Index">ADC</a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-controller="ADC_Procesos" asp-action="Index">Tareas</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">@(Global.anexos.Where(a => a.Id_Anexo == 1).FirstOrDefault().Nombre)</li>
            </ol>
        </nav>

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active" aria-current="page">
                    @(Global.session_usuario.user.Titulo + " " + Global.session_usuario.user.Nombre + " | " + Global.session_usuario.Rol)
                </li>
            </ol>
        </nav>

    </div>
    <div class="container">
        <div class="page-header mb-4">
            <div class="media">
                <div class="media-body ml-3">
                    <h3 class="mb-0">@(Global.proyectos.Nombre)</h3>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane fade show active" role="tabpanel" id="profile">
                        <!--end of avatar-->
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Registro_Eliminado" value="0" />
                            <input type="hidden" asp-for="Fecha" value="@(ViewBag.fecha)" />

                            <div class="form-group row align-items-center">
                                <label asp-for="Tipo_Cambio" class="col-2" style="text-align:right;">Tipo de cambio</label>
                                <div class="col">
                                    @if (Global.session_usuario.user.Id_Rol == Global.adc.adc.Id_ProponenteCambio)
                                    {
                                        <select asp-for="Tipo_Cambio" class="form-control" required>
                                            <option>Temporal</option>
                                            <option>Permanente</option>
                                        </select>
                                    }
                                    else
                                    {
                                        <input type="hidden" asp-for="Tipo_Cambio" />
                                        <input type="text" asp-for="Tipo_Cambio" class="form-control" disabled />
                                    }

                                </div>
                                <span asp-validation-for="Tipo_Cambio" class="text-danger"></span>
                            </div>
                            <div class="form-group row align-items-center">
                                <label asp-for="Fecha" class="col-2" style="text-align:right;"></label>
                                <div class="col">
                                    <input type="hidden" asp-for="Fecha" />
                                    <input type="text" asp-for="Fecha" class="form-control" disabled />
                                </div>
                                <span asp-validation-for="Fecha" class="text-danger"></span>
                            </div>
                            <div class="form-group row align-items-center">
                                <label asp-for="Id_Residencia" class="col-2" style="text-align:right;">Residencia</label>
                                <div class="col">
                                    @if (Global.session_usuario.user.Id_Rol == Global.adc.adc.Id_ProponenteCambio)
                                    {
                                        <select asp-for="Id_Residencia" class="form-control" required>
                                            @foreach (var item in Global.residencias)
                                            {
                                                <option value="@(item.Id_Residencia)">@(item.Nombre)</option>
                                            }
                                        </select>
                                    }
                                    else
                                    {
                                        <input type="hidden" asp-for="Id_Residencia" />
                                        <input type="text" value="@(Global.anexo1.residencia)" class="form-control" disabled />
                                    }
                                    
                                </div>
                                <span asp-validation-for="Id_Residencia" class="text-danger"></span>
                            </div>
                            <div class="form-group row align-items-center">
                                <label asp-for="Ut_Gasoducto" class="col-2" style="text-align:right;">Sector/Área</label>
                                <div class="col">
                                    @if (Global.session_usuario.user.Id_Rol == Global.adc.adc.Id_ProponenteCambio)
                                    {
                                        <select asp-for="Ut_Gasoducto" class="form-control" required>
                                            @foreach (var item in Global.gasoductos)
                                            {
                                                <option value="@(item.Ut_Gasoducto)">@(item.Gasoducto)</option>
                                            }
                                        </select>
                                    }
                                    else
                                    {
                                        <input type="hidden" asp-for="Ut_Gasoducto" />
                                        <input type="text" value="@(Global.anexo1.gasoducto)" class="form-control" disabled />
                                    }
                                    
                                </div>
                                <span asp-validation-for="Ut_Gasoducto" class="text-danger"></span>
                            </div>
                            <div class="form-group row align-items-center">
                                <label asp-for="Ut_Tramo" class="col-2" style="text-align:right;">Planta o instalación</label>
                                <div class="col">
                                    @if (Global.session_usuario.user.Id_Rol == Global.adc.adc.Id_ProponenteCambio)
                                    {
                                        <select asp-for="Ut_Tramo" class="form-control" required>
                                            @foreach (var item in Global.tramos)
                                            {
                                                <option value="@(item.Ut_Tramo)">@(item.Tramo)</option>
                                            }
                                        </select>
                                    }
                                    else
                                    {
                                        <input type="hidden" asp-for="Ut_Tramo" />
                                        <input type="text" value="@(Global.anexo1.tramo)" class="form-control" disabled />
                                    }
                                    
                                </div>
                                <span asp-validation-for="Ut_Tramo" class="text-danger"></span>
                            </div>
                            <div class="form-group row align-items-center">
                                <label asp-for="Proceso" class="col-2" style="text-align:right;">
                                    Proceso, maquinaria o equipo por modificar
                                </label>
                                <div class="col">
                                    @if (Global.session_usuario.user.Id_Rol == Global.adc.adc.Id_ProponenteCambio)
                                    {
                                        <textarea type="text" asp-for="Proceso" class="form-control" required></textarea>
                                    }
                                    else
                                    {
                                        <input type="hidden" asp-for="Proceso" />
                                        <textarea type="text" asp-for="Proceso" class="form-control" disabled></textarea>
                                    }
                                    
                                </div>
                                <span asp-validation-for="Proceso" class="text-danger"></span>
                            </div>
                            <div class="form-group row align-items-center">
                                <label asp-for="Prestacion_Servicio" class="col-2" style="text-align:right;">
                                    Prestación del servicio de la maquinaria o equipo
                                </label>
                                <div class="col">
                                    @if (Global.session_usuario.user.Id_Rol == Global.adc.adc.Id_ProponenteCambio)
                                    {
                                        <textarea type="text" asp-for="Prestacion_Servicio" class="form-control" required></textarea>
                                    }
                                    else
                                    {
                                        <input type="hidden" asp-for="Prestacion_Servicio" />
                                        <textarea type="text" asp-for="Prestacion_Servicio" class="form-control" disabled></textarea>
                                    }

                                </div>
                                <span asp-validation-for="Prestacion_Servicio" class="text-danger"></span>
                            </div>
                            <div class="form-group row align-items-center">
                                <label asp-for="Descripcion" class="col-2" style="text-align:right;">
                                    Descripción del cambio propuesto, indicando las razones del mismo
                                </label>
                                <div class="col">
                                    @if (Global.session_usuario.user.Id_Rol == Global.adc.adc.Id_ProponenteCambio)
                                    {
                                        <textarea type="text" asp-for="Descripcion" class="form-control" required></textarea>
                                    }
                                    else
                                    {
                                        <input type="hidden" asp-for="Descripcion" />
                                        <textarea type="text" asp-for="Descripcion" class="form-control" disabled></textarea>
                                    }

                                </div>
                                <span asp-validation-for="Descripcion" class="text-danger"></span>
                            </div>


                            <div class="form-group row align-items-center">
                                <label asp-for="Resultados_Analisis" class="col-2" style="text-align:right;">
                                    Resultado del análisis de la propuesta
                                </label>
                                <div class="col">
                                    @if (Global.session_usuario.user.Id_Rol == 3) //Responsable ADC
                                    {
                                        <textarea type="text" asp-for="Resultados_Analisis" class="form-control" required></textarea>
                                    }
                                    else
                                    {
                                        <textarea type="text" asp-for="Resultados_Analisis" class="form-control" disabled></textarea>
                                    }
                                </div>
                                <span asp-validation-for="Resultados_Analisis" class="text-danger"></span>
                            </div>



                            <div class="form-group row align-items-center">
                                <label asp-for="Resultados_Propuesta" class="col-2" style="text-align:right;">
                                    Resultado de la propuesta
                                </label>
                                <div class="col">
                                    @if (Global.session_usuario.user.Id_Usuario == Global.adc.adc.Id_ProponenteCambio &&
                                        Global.anexo1.anexo1.Resultados_Analisis != null) //Responsable ADC
                                    {
                                        <textarea type="text" asp-for="Resultados_Propuesta" class="form-control" required></textarea>
                                    }
                                    else
                                    {
                                        <textarea type="text" asp-for="Resultados_Propuesta" class="form-control" disabled></textarea>
                                    }
                                </div>
                                <span asp-validation-for="Resultados_Propuesta" class="text-danger"></span>
                            </div>


                            <div class="form-group row align-items-center">
                                <label asp-for="Estatus" class="col-2" style="text-align:right;">
                                    Estatus
                                </label>
                                <div class="col">
                                    @if (Global.session_usuario.user.Id_Rol == 3) //Responsable ADC
                                    {
                                        <select asp-for="Estatus" class="form-control" required>
                                            <option>Pendiente</option>
                                            <option>En revisión</option>
                                            <option>Aceptado</option>
                                            <option>Rechazado</option>
                                        </select>
                                    }
                                    else
                                    {
                                        <input type="text" asp-for="Estatus" class="form-control" disabled />
                                    }
                                </div>
                                <span asp-validation-for="Estatus" class="text-danger"></span>
                            </div>
                            <hr>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
