
@{
    ViewData["Title"] = "Index";
}

<div class="main-container">

    <div class="navbar bg-white breadcrumb-bar">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Dashboard">Inicio</a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-controller="ProyectosUsuario" asp-action="Index">Proyectos</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">ADCs</li>

            </ol>
        </nav>

        <div class="dropdown">
            <button class="btn btn-round" role="button" title="@(Global.session_usuario.nombre_completo)" data-toggle="dropdown" aria-expanded="false">
                <img alt="Image" src="~/assets/img/user.jpeg" class="avatar" />
            </button>
            <div class="dropdown-menu dropdown-menu-right">
                <a class="dropdown-header text-dark text-uppercase">@(Global.session_usuario.Rol)</a>
                <a class="dropdown-item" asp-controller="Home" asp-action="AccountSettings">Configuración de la cuenta</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item text-danger" asp-controller="Home" asp-action="LogOut">Cerrar sesión</a>

            </div>
        </div>

    </div>
    <div class="container">

        <div id="PlaceHolderHere"></div>

        <div class="page-header mb-4">
            <div class="row content-list-head">
                <div class="col-auto">
                    <h3 class="mb-0">Administraciones de cambio</h3>
                </div>
                <button type="button" class="btn btn-lg btn-dark col-xs-12"
                        data-toggle="modal" data-target="#nuevoADC-modal" data-url="@Url.Action($"ADC/{Global.proyectos.Id_Proyecto}")">
                    Nuevo <span class="material-icons">add</span>
                </button>

            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane fade show active" role="tabpanel" id="profile">
                        <!--end of avatar-->
                        <dl class="row">
                            <dt class="col-sm-3">
                                Clave:
                            </dt>
                            <dd class="col-sm-9">
                                @(Global.proyectos.Clave)
                            </dd>
                            <dt class="col-sm-3">
                                Proyecto:
                            </dt>
                            <dd class="col-sm-9">
                                @(Global.proyectos.Nombre)
                            </dd>
                            <dt class="col-sm-3">
                                Descripción:
                            </dt>
                            <dd class="col-sm-9">
                                @(Global.proyectos.Descripcion)
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <ul class="nav nav-tabs nav-fill" role="tablist">
            @if (Global.session_usuario.user.Id_Rol <= 2)
            {
                <li class="nav-item">
                    <a class="nav-link active" id="project-add-details-tab" data-toggle="tab" href="#adc-todas" role="tab" aria-controls="adc-todas" aria-selected="true">Todas</a>
                </li>
            }
            <li class="nav-item">
                <a class="nav-link @(Global.session_usuario.user.Id_Rol > 2 ? "active" : "")" id="project-add-details-tab" data-toggle="tab" href="#adc-propuestas" role="tab" aria-controls="adc-propuestas" aria-selected="true">Mis propuestas</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="project-add-members-tab" data-toggle="tab" href="#adc-cargo" role="tab" aria-controls="adc-cargo" aria-selected="false">A mi cargo</a>
            </li>
        </ul>

        <div class="tab-content">
            @if (Global.session_usuario.user.Id_Rol <= 2)
            {
                <div class="tab-pane fade show active" id="adc-todas" role="tabpanel">
                    @if (Global.vista_adc != null && Global.vista_adc.Count() > 0)
                    {
                        <table id="example" class="table table-striped table-bordered" style="width:100%">
                            <thead class="thead-dark">
                                <tr>
                                    <th>
                                        Folio ADC
                                    </th>
                                    <th>
                                        Lider
                                    </th>
                                    <th>
                                        Avance ADC
                                    </th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Global.vista_adc)
                                {
                                    <tr>
                                        <td>
                                            @(item.adc.Folio)
                                        </td>
                                        <td>
                                            @(item.lider)
                                        </td>
                                        <td>
                                            @(Global.resumenADC.Where(r => r.id_proyecto == item.id_proyecto && r.id_adc == item.adc.Id_ADC).FirstOrDefault().avance_ADC)%
                                        </td>

                                        <td>
                                            <a class="btn btn-dark form-control" asp-action="Tareas" asp-route-id="@item.adc.Id_ADC">Tareas</a>
                                        </td>
                                        <td>
                                            <button class="btn btn-round" title="Eliminar"
                                                    data-toggle="modal" data-target="#eliminarADCUsuario-modal" data-url="@Url.Action($"Delete/{item.adc.Id_ADC}")">
                                                <span data-title="" class="material-icons">delete</span>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="card card-note">

                            <div class="card-body">
                                <p>No hay ADCs propuestas registradas</p>
                            </div>
                        </div>
                    }
                </div>
            }

            <div class="tab-pane fade @(Global.session_usuario.user.Id_Rol > 2 ? "show active" : "")" id="adc-propuestas" role="tabpanel">
                @if (Global.vista_adc_propuestas != null && Global.vista_adc_propuestas.Count() > 0)
                {
                    <table id="example" class="table table-striped table-bordered" style="width:100%">
                        <thead class="thead-dark">
                            <tr>
                                <th>
                                    Id ADC
                                </th>
                                <th>
                                    Folio ADC
                                </th>
                                <th>
                                    Lider
                                </th>
                                <th>
                                    Avance ADC
                                </th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Global.vista_adc_propuestas)
                            {
                                <tr>
                                    <td>
                                        @(item.adc.Id_ADC)
                                    </td>
                                    <td>
                                        @(item.adc.Folio)
                                    </td>
                                    <td>
                                        @(item.lider)
                                    </td>
                                    <td>
                                        @(Global.resumenADC.Where(r => r.id_proyecto == item.id_proyecto && r.id_adc == item.adc.Id_ADC).FirstOrDefault().avance_ADC)%
                                    </td>

                                    <td>
                                        <a class="btn btn-dark form-control" asp-action="Tareas" asp-route-id="@item.adc.Id_ADC">Tareas</a>
                                    </td>
                                    <td>
                                        <button class="btn btn-round" title="Eliminar"
                                                data-toggle="modal" data-target="#eliminarADCUsuario-modal" data-url="@Url.Action($"Delete/{item.adc.Id_ADC}")">
                                            <span data-title="" class="material-icons">delete</span>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="card card-note">

                        <div class="card-body">
                            <p>No hay ADCs propuestas registradas</p>
                        </div>
                    </div>
                }
            </div>

            <div class="tab-pane fade" id="adc-cargo" role="tabpanel">
                @if (Global.vista_adc_cargo != null && Global.vista_adc_cargo.Count() > 0 && Global.session_usuario.user.Id_Rol != 7)
                {
                    <table id="example" class="table table-striped table-bordered" style="width:100%">
                        <thead class="thead-dark">
                            <tr>
                                <th>
                                    Folio ADC
                                </th>
                                <th>
                                    Lider
                                </th>
                                <th>
                                    Avance ADC
                                </th>
                                @if (new List<int> { 1, 2 }.Contains(Global.session_usuario.user.Id_Rol))
                                {
                                    <th></th>
                                }
                                <th></th>
                                @if (new List<int> { 1, 2 }.Contains(Global.session_usuario.user.Id_Rol))
                                {
                                    <th></th>
                                }

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Global.vista_adc_cargo)
                            {
                                <tr>
                                    <td>
                                        @(item.adc.Folio)
                                    </td>
                                    <td>
                                        @(item.lider)
                                    </td>
                                    <td>
                                        @(Global.resumenADC.Where(r => r.id_proyecto == item.id_proyecto && r.id_adc == item.adc.Id_ADC).FirstOrDefault().avance_ADC)%
                                    </td>

                                    @if (new List<int> { 1, 2 }.Contains(Global.session_usuario.user.Id_Rol))
                                    {
                                        <td>
                                            <button class="btn btn-dark" title="Detalles"
                                                    data-toggle="modal" data-target="#administrarADC-modal" data-url="@Url.Action($"Edit/{item.adc.Id_ADC}")">
                                                <span>Administrar</span>
                                            </button>
                                        </td>
                                    }
                                    <td>
                                        <a class="btn btn-dark form-control" asp-action="Tareas" asp-route-id="@item.adc.Id_ADC">Tareas</a>
                                    </td>
                                    @if (new List<int> { 1, 2 }.Contains(Global.session_usuario.user.Id_Rol))
                                    {
                                        <td>
                                            <button class="btn btn-round" title="Eliminar"
                                                    data-toggle="modal" data-target="#eliminarADC-modal" data-url="@Url.Action($"Delete/{item.adc.Id_ADC}")">
                                                <span data-title="" class="material-icons">delete</span>
                                            </button>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="card card-note">

                        <div class="card-body">
                            <p>No hay ADCs a cargo registrados</p>
                        </div>
                    </div>
                }
            </div>
        </div>

        

    </div>
</div>
