
@{
    ViewData["Title"] = "Index";
}

<div class="main-container">

    <div class="navbar bg-white breadcrumb-bar">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Dashboard">Inicio</a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-controller="ReporteAnexos" asp-action="Index">Reporte anexos</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Anexos proyecto</li>

            </ol>
        </nav>

        <div class="dropdown">
            <button class="btn btn-round" role="button" title="@(Global.session_usuario.nombre_completo)" data-toggle="dropdown" aria-expanded="false">
                <img alt="Image" src="~/assets/img/user.jpeg" class="avatar" />
            </button>
            <div class="dropdown-menu dropdown-menu-right">
                <a class="dropdown-header text-dark text-uppercase">@(Global.session_usuario.Rol)</a>
                <a class="dropdown-item" asp-controller="Home" asp-action="AccountSettings">Configuración de la cuenta</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item text-danger" asp-controller="Home" asp-action="LogOut">Cerrar sesión</a>

            </div>
        </div>


    </div>

    <div id="PlaceHolderHere"></div>

    <div class="container">

        <div class="page-header mb-4">
            <div class="row content-list-head">
                <div class="col-auto">
                    <h2>@(Global.proyectos.Nombre)</h2>
                </div>
            </div>
        </div>

        @if (Global.anexos.Count() > 0)
        {
            <table id="example" class="table table-striped table-bordered" style="width:100%">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Nombre
                        </th>
                        <th style="width:10%;"></th>
                    </tr>
                </thead>
                <tbody>
                    <!--ANEXO 1-->
                    <tr>
                        <td>
                            @(Global.anexos.ElementAt(0).Id)
                        </td>
                        <td>
                            @(Global.anexos.ElementAt(0).Nombre)
                        </td>
                        <td style="width:10%;">
                            <a class="btn btn-round form-control" title="Descargar" asp-action="Anexo1" asp-route-idProyecto="@(Global.proyectos.Id)">
                                <span class="material-icons">get_app</span>
                            </a>
                        </td>
                    </tr>
                    <!--ANEXO 2-->
                    <tr>
                        <td>
                            @(Global.anexos.ElementAt(1).Id)
                        </td>
                        <td>
                            @(Global.anexos.ElementAt(1).Nombre)
                        </td>
                        <td style="width:10%;">
                            <a class="btn btn-round form-control" title="Descargar" asp-action="Anexo2">
                                <span class="material-icons">get_app</span>
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @(Global.anexos.ElementAt(2).Id)
                        </td>
                        <td>
                            @(Global.anexos.ElementAt(2).Nombre)
                        </td>
                        <td style="width:10%;">
                            <a class="btn btn-round form-control" title="Descargar" asp-action="Anexo3" asp-route-idProyecto="@(Global.proyectos.Id)">
                                <span class="material-icons">get_app</span>
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        }
        else
        {
            <div class="card card-note">

                <div class="card-body">
                    <p>No hay anexos disponibles</p>
                </div>
            </div>
        }

    </div>
</div>


