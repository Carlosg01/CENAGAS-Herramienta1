@model SistemaCenagas.Models.Anexo1_PropuestaCambio

@{
    ViewData["Title"] = "Create";
}

<div class="main-container">

    <div class="navbar bg-white breadcrumb-bar">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Dashboard">Inicio</a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-controller="Anexo1_PropuestaCambio" asp-action="Index">Propuestas de cambio</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Crear mi propuesta</li>

            </ol>
        </nav>

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active" aria-current="page">
                    @(Global.usuario.Titulo + " " + Global.usuario.Nombre + " | " + (Global.usuario.Rol != null ? Global.usuario.Rol : "Sin asignación"))
                </li>
            </ol>
        </nav>

    </div>
    <div class="container">
        <div class="page-header mb-4">
            <div class="media">
                <div class="media-body ml-3">
                    <h2 class="mb-0">@(Global.proyecto.Nombre): Mi propuesta de cambio</h2>
                </div>
            </div>

        </div>
        <div class="card">
            <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane fade show active" role="tabpanel" id="profile">
                        <!--end of avatar-->
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input asp-for="Id_Proyecto" value="@(Global.proyecto.Id_Proyecto)" class="form-control" />
                            <div class="form-group">
                                <label asp-for="Tipo_Cambio" class="control-label">Tipo de cambio</label>
                                <select asp-for="Tipo_Cambio" class="form-control">
                                    <option>Temporal</option>
                                    <option>Permanente</option>
                                </select>
                                <span asp-validation-for="Tipo_Cambio" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Fecha" class="control-label"></label>
                                <input asp-for="Fecha" class="form-control" type="date" />
                                <span asp-validation-for="Fecha" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Id_Residencia" class="control-label"></label>
                                <select asp-for="Id_Residencia" class="form-control" >
                                    @for(int i = 0; i < Global.residencias.Count(); i++)
                                    {
                                        <option value="@Global.residencias.ElementAt(i).Id_Residencia">
                                            @Global.residencias.ElementAt(i).Nombre
                                        </option>
                                    }
                                </select>
                                <span asp-validation-for="Id_Residencia" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Sector_Area" class="control-label"></label>
                                <input asp-for="Sector_Area" class="form-control" />
                                <span asp-validation-for="Sector_Area" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Planta_Instalacion" class="control-label"></label>
                                <input asp-for="Planta_Instalacion" class="form-control" />
                                <span asp-validation-for="Planta_Instalacion" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Proceso" class="control-label"></label>
                                <input asp-for="Proceso" class="form-control" />
                                <span asp-validation-for="Proceso" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Prestacion_Servicio" class="control-label"></label>
                                <input asp-for="Prestacion_Servicio" class="form-control" />
                                <span asp-validation-for="Prestacion_Servicio" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Descripcion" class="control-label"></label>
                                <input asp-for="Descripcion" class="form-control" />
                                <span asp-validation-for="Descripcion" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Resultados_Analisis" class="control-label"></label>
                                <input asp-for="Resultados_Analisis" class="form-control" />
                                <span asp-validation-for="Resultados_Analisis" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Id_ProponenteCambio" class="control-label"></label>
                                <input asp-for="Id_ProponenteCambio" class="form-control" />
                                <span asp-validation-for="Id_ProponenteCambio" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Id_ResponsableADC" class="control-label"></label>
                                <input asp-for="Id_ResponsableADC" class="form-control" />
                                <span asp-validation-for="Id_ResponsableADC" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Resultados_Propuesta" class="control-label"></label>
                                <input asp-for="Resultados_Propuesta" class="form-control" />
                                <span asp-validation-for="Resultados_Propuesta" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Estatus" class="control-label"></label>
                                <input asp-for="Estatus" class="form-control" />
                                <span asp-validation-for="Estatus" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Solicitar" class="btn btn-primary" />
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
