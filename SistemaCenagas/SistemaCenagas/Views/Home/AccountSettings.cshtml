                                    <label asp-for="Nombre" class="col-3"></label>
                                    <div class="col">
                                        <input type="text" placeholder="Nombre" asp-for="Nombre" class="form-control" required />
                                    </div>
                                </div>
                                <div class="form-group row align-items-center">
                                    <label asp-for="Paterno" class="col-3">Apellido paterno</label>
                                    <div class="col">
                                        <input type="text" placeholder="Apellido" asp-for="Paterno" class="form-control" required />
                                    </div>
                                </div>
