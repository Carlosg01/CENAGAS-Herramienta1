                                    <label asp-for="Materno" class="col-3">Apellido materno</label>
                                    <div class="col">
                                        <input type="text" placeholder="Apellido" asp-for="Materno" class="form-control" required />
                                    </div>
                                </div>
                                <div class="form-group row align-items-center">
                                    <label asp-for="Email" class="col-3"></label>
                                    <div class="col">
                                        <input type="text" placeholder="Email" asp-for="Email" class="form-control" required />
                                    </div>
                                </div>
                                <div class="form-group row align-items-center">
                                    <label asp-for="Rol" class="col-3"></label>
                                    <div class="col">
                                        <input disabled type="text" value="@ViewBag.Rol" class="form-control" required />
                                    </div>
                                </div>
                                

