@{
    Global global = (Global)ViewBag.global;
}

<div class="breadcrumb-bar navbar bg-white sticky-top">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">Inicio</li>
        </ol>
    </nav>

    <div class="dropdown">
        <button class="btn btn-round" role="button" title="@(global.session_usuario.nombre_completo)" data-toggle="dropdown" aria-expanded="false">
            <img alt="Image" src="~/assets/img/user.jpeg" class="avatar" />
        </button>
        <div class="dropdown-menu dropdown-menu-right">
            <a class="dropdown-header text-dark text-uppercase">@(global.session_usuario.Rol)</a>
            <a class="dropdown-item" asp-controller="Home" asp-action="AccountSettings">Configuración de la cuenta</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item text-danger" asp-controller="Home" asp-action="LogOut">Cerrar sesión</a>

        </div>
    </div>

</div>

<div class="main-container">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-11 col-xl-9">
                <section class="py-4 py-lg-5">
                    <div class="mb-3 d-flex">
                        <!--img alt="Pipeline" src="assets/img/logo-color.svg" class="avatar avatar-lg mr-1" /-->
                        <img alt="Pipeline" src="https://globalenergy.mx/wp-content/uploads/2019/08/Gih55_Qq_400x400.png" width="100" class="avatar avatar-lg mr-1" />
                    </div>

                    <h1 class="display-4 mb-3 text-center"> Gestión de Proyectos CENAGAS</h1>

                    <p class="lead text-center">
                        Procedimiento de Administración de Cambios Temporales o Definitivos.<br>
                        Clasificación de Nivel de Riesgo<br />"Alto, Medio, Bajo".
                    </p>
                </section>
            </div>
        </div>
    </div>
</div>