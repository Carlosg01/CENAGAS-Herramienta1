@{
}

<div class="main-container fullscreen">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-5 col-lg-6 col-md-7">
                <div class="text-center">
                    <h1 class="h2">Resetear contraseña &#x1f62B;</h1>
                    <p class="lead">Escribe tu nueva contraseña</p>

                    <hr>
                    <form asp-controller="Home" asp-action="ResetPassword">
                        <input type="hidden" asp-for="Email" class="form-control" />
                        <div class="form-group">
                            <input asp-for="Password" type="password" placeholder="Nueva contraseña" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <input asp-for="Confirmar_Password" type="password" placeholder="Confirmar contraseña" class="form-control" />
                            <span asp-validation-for="Confirmar_Password" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <input type="submit" value="Resetear" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
