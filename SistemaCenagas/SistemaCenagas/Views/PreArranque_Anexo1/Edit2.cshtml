@model SistemaCenagas.Models.PreArranque_Anexo1Model_EquipoVerificador

@{
    ViewData["Title"] = "Edit";
}

<script>
    $(document).ready(function () {
        $("#tabla").DataTable({
            scrollX: true,
            //serverSide: true,
            searching: false,
            paging: false
        });

        $("#btn_agregar_accion").click(function () {
        alert("accion:" + $("#input_accion").val() + " Resp: " + $("#select_responsable").val());
        $.ajax({
            type: "Post",
            url: "/PreArranque_Anexo1/addAccion",
            //contentType: "application/json; charset=utf-8",
            data: { "accionn": $("#input_accion").val() },
            success: function () {
                alert("Agregado!");
            },
            failure: function (response) {
                alert("Failure: " + response.responseText);
            },
            error: function (response) {
                alert("Error: " + response.responseText);
            }

        });
    });
    });



</script>

<div class="modal fade" tabindex="-1" role="dialog" id="editarAnexo1-modal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title">
                    @(Global.anexos.Where(a => a.Id == 7).FirstOrDefault().Nombre)
                </h6>
                <a asp-controller="PreArranque_Procesos" asp-action="Index" class="close btn btn-round">
                    <i class="material-icons">close</i>
                </a>
            </div>
            <!--end of modal head-->
            <div class="modal-body">

                <form asp-action="Edit2">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="anexo1.Id" />
                    <input type="hidden" asp-for="anexo1.Id_Prearranque" />

                    <div class="form-group row align-items-center">
                        <label class="col-2" style="text-align:right;">Proyecto</label>
                        <div class="col">
                            <input type="text" asp-for="Proyecto" class="form-control" disabled />
                        </div>
                    </div>
                    <hr />
                    
                    <div class="form-group row align-items-center">
                        
                        <div class="col">
                            <label class="" style="text-align:right;">Accion descriptiva</label>
                            <input id="input_accion" type="text" class="form-control" required />
                        </div>
                        
                        <div class="col">
                            <label class="" style="text-align:right;">Responsable</label>
                            <select id="select_responsable" class="form-control" required>
                                @foreach(var item in Global.equipoVerificador_PreArranque)
                                {
                                <option value="@(item.integrante.Id_Usuario)">@(item.nombre)</option>
                                }
                            </select>
                        </div>
                        <div class="col">
                            <button id="btn_agregar_accion" class="btn btn-round">
                                <span class="material-icons">add</span>
                            </button>
                        </div>
                    </div>

                    <hr />
                    <table id="tabla" class="table table-striped table-bordered" style="width:100%">

                        <thead class="thead-dark">
                            <tr>
                                <th>No.</th>
                                <th>Accion descriptiva</th>
                                <th>Actividad</th>
                                <th>Responsable</th>
                                <th>Fec. Inicio</th>
                                <th>Fec. Fin</th>
                                <th>Evidencia</th>
                                <th>Avance</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var accion in Global.modelActividades)
                            {
                                <tr>
                                    <th>@(accion.accion)</th>
                                    <th>
                                        <button id="btn_agregar_actividad" class="btn btn-round">
                                            <span class="material-icons">add</span>
                                        </button>
                                    </th>
                                </tr>
                                foreach(var act in accion.actividaes)
                                {

                                }
                            }
                        </tbody>

                    </table>

                        <div class="modal-footer">
                            <button type="submit" role="button" class="btn btn-success">
                                Guardar
                            </button>
                            <a class="btn btn-dark" asp-controller="PreArranque_Procesos" asp-action="Index">
                                Cancelar
                            </a>
                        </div>
                </form>

            </div>
        </div>
    </div>
</div>

