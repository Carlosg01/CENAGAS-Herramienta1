
@{
    ViewData["Title"] = "Index";
}

<div class="main-container">

    <div class="navbar bg-white breadcrumb-bar">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Dashboard">Inicio</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Actividades ADC</li>

            </ol>
        </nav>

        <div class="dropdown">
            <button class="btn btn-round" role="button" title="@(Global.session_usuario.nombre_completo)" data-toggle="dropdown" aria-expanded="false">
                <img alt="Image" src="~/assets/img/user.jpeg" class="avatar" />
            </button>
            <div class="dropdown-menu dropdown-menu-right">
                <a class="dropdown-header text-dark text-uppercase">@(Global.session_usuario.Rol)</a>
                <a class="dropdown-item" asp-controller="Home" asp-action="AccountSettings">Configuración de la cuenta</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item text-danger" asp-controller="Home" asp-action="LogOut">Cerrar sesión</a>

            </div>
        </div>

    </div>

    <div id="PlaceHolderHere"></div>

    <div class="container">

        <div class="page-header mb-4">
            <div class="row content-list-head">
                <div class="col-auto">
                    <h3>Actividades para la administración de cambios</h3>
                </div>
                <button type="button" class="btn btn-lg btn-dark col-xs-12"
                        data-toggle="modal" data-target="#nuevoUsuario-modal" data-url="@Url.Action("Create")">
                    Nueva <span class="material-icons">add</span>
                </button>
            </div>
        </div>
        @if (Global.vista_actividadesADC.Count() > 0)
        {
            <table id="example" class="table table-striped table-bordered" style="width:100%">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Nombre
                        </th>
                        <th style="width:10%;"></th>
                        <th style="width:10%;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Global.vista_actividadesADC)
                    {
                        @if (item.Registro_Eliminado == 0)
                        {
                            <tr>
                                <td>
                                    @(item.Id_Actividad)
                                </td>
                                <td>
                                    @(item.Actividad)
                                </td>
                                <td style="width:10%;">
                                    <a class="btn btn-dark form-control" asp-action="Normativas" asp-route-id="@item.Id_Actividad">Normativas</a>
                                </td>
                                <td style="width:10%;">
                                    <a class="btn btn-info form-control" asp-action="Edit" asp-route-id="@item.Id_Actividad">Editar</a>
                                </td>
                                <!--td style="width:10%;">
                                <a class="btn btn-danger form-control" asp-action="Delete" asp-route-id="@item.Id_Actividad">Eliminar</a>
                            </td-->
                            </tr>
                        }

                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="card card-note">

                <div class="card-body">
                    <p>No hay actividades disponibles</p>
                </div>
            </div>
        }

    </div>
</div>

