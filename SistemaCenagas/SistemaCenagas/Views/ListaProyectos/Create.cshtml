@model SistemaCenagas.Models.Proyectos

@{
    ViewData["Title"] = "Create";
}

<div class="main-container">

    <div class="navbar bg-white breadcrumb-bar">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Dashboard">Principal</a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-controller="ListaProyectos" asp-action="Index">Lista proyectos</a>
                </li>

            </ol>
        </nav>

        <div class="dropdown">
            <button class="btn btn-round" role="button" data-toggle="dropdown" aria-expanded="false">
                <i class="material-icons">configuracion</i>
            </button>
            <div class="dropdown-menu dropdown-menu-right">
                <a href="nav-side-user.html" class="dropdown-item">Perfil</a>
                <a asp-controller="Home" asp-action="AccountSettings" class="dropdown-item">Configuración de la cuenta</a>
                <a asp-controller="Home" asp-action="LogOut" class="dropdown-item text-danger">Cerrar sesión</a>
            </div>
        </div>

    </div>
    <div class="container">
        <div class="page-header mb-4">
            <div class="media">
                <div class="media-body ml-3">
                    <h2 class="mb-0">Nuevo proyecto</h2>
                </div>
            </div>

        </div>
        <div class="card">
            <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane fade show active" role="tabpanel" id="profile">
                        <!--end of avatar-->
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Folio_adc" class="control-label"></label>
                                <input asp-for="Folio_adc" class="form-control" />
                                <span asp-validation-for="Folio_adc" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Nombre" class="control-label"></label>
                                <input asp-for="Nombre" class="form-control" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Instalacion_Area" class="control-label"></label>
                                <input asp-for="Instalacion_Area" class="form-control" />
                                <span asp-validation-for="Instalacion_Area" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Tipo_Cambio" class="control-label"></label>
                                <select asp-for="Tipo_Cambio" class="form-control">
                                    <option>Permanente</option>
                                    <option>Temporal</option>
                                    <option>Definitivo</option>
                                    <option>Nuevo rehabilitado</option>
                                    <option>Modificado</option>
                                </select>
                                <span asp-validation-for="Tipo_Cambio" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Descripcion" class="control-label"></label>
                                <input asp-for="Descripcion" class="form-control" />
                                <span asp-validation-for="Descripcion" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Crear proyecto" class="btn btn-primary" />
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
