@model SistemaCenagas.Models.Residencias

@{
    ViewData["Title"] = "Create";

}

<div class="modal fade" tabindex="-1" role="dialog" id="nuevoUsuario-modal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Agregar nueva residencia</h5>
                <a asp-action="Index" class="close btn btn-round">
                    <i class="material-icons">close</i>
                </a>
            </div>
            <!--end of modal head-->
            <div class="modal-body">
                
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group row align-items-center">
                        <label asp-for="Nombre" class="col-2" style="text-align:right;">Nombre</label>
                        <div class="col">
                            <input type="text" asp-for="Nombre" class="form-control" required />
                        </div>
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group row align-items-center">
                        <label asp-for="Id_Estado" class="col-2" style="text-align:right;">Estado</label>
                        <div class="col">
                            <select asp-for="Id_Estado" class="form-control">
                                @foreach(var item in Global.estados)
                                {
                                    <option value="@(item.Id)">@(item.Estado)</option>
                                }
                            </select>
                        </div>
                        <span asp-validation-for="Id_Estado" class="text-danger"></span>
                    </div>
                    <div class="modal-footer">

                        <button type="submit" id="submit_usuario" role="button" class="btn btn-success">
                            Crear
                        </button>
                        <a class="btn btn-dark" asp-action="Index">
                            Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
