@model SistemaCenagas.Models.Proyectos

@{
    ViewData["Title"] = "Details";
}

<div class="main-container">

    <div class="navbar bg-white breadcrumb-bar">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Dashboard">Principal</a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-controller="Proyectos" asp-action="Index">Proyectos</a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-controller="" asp-action="">Detalles</a>
                </li>
            </ol>
        </nav>

        <div class="dropdown">
            <button class="btn btn-round" role="button" data-toggle="dropdown" aria-expanded="false">
                <i class="material-icons">configuracion</i>
            </button>
            <div class="dropdown-menu dropdown-menu-right">
                <a href="nav-side-user.html" class="dropdown-item">Perfil</a>
                <a asp-controller="Home" asp-action="AccountSettings" class="dropdown-item">Configuración de la cuenta</a>
                <a asp-controller="Home" asp-action="LogOut" class="dropdown-item text-danger">Cerrar sesión</a>
            </div>
        </div>

    </div>
    <div class="container">
        <div class="page-header mb-4">
            <div class="media">
                <div class="media-body ml-3">
                    <h1 class="mb-0">Detalles</h1>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane fade show active" role="tabpanel" id="profile">
                        <!--end of avatar-->
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Folio_adc)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Folio_adc)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Nombre)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Nombre)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Instalacion_Area)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Instalacion_Area)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Tipo_Cambio)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Tipo_Cambio)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Descripcion)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Descripcion)
                            </dd>
                        </dl>

                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id_Proyecto">Edit</a> |
                            <a asp-action="Index">Regresar</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
