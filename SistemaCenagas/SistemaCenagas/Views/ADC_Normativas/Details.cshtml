@model SistemaCenagas.Models.ADC_Normativas

@{
    ViewData["Title"] = "Details";
}

<div class="main-container">

    <div class="navbar bg-white breadcrumb-bar">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Dashboard">Inicio</a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-controller="ADC_Actividades" asp-action="Index">Actividades ADC</a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-controller="ADC_Normativas" asp-action="Index">Normativas</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Detalles</li>
            </ol>
        </nav>

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active" aria-current="page">
                    @(Global.usuario.Titulo + " " + Global.usuario.Nombre + " | " + (Global.usuario.Rol != null ? Global.usuario.Rol : "Sin asignación"))
                </li>
            </ol>
        </nav>

    </div>
    <div class="container">
        <div class="page-header mb-4">
            <div class="media">
                <div class="media-body ml-3">
                    <h2 class="mb-0"><b>@(Global.adc_actividad.Actividad)</b>: Detalles normativa</h2>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane fade show active" role="tabpanel" id="profile">
                        <!--end of avatar-->
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Id_Actividad)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Id_Actividad)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Clave)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Clave)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Responsable)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Responsable)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Descripcion)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Descripcion)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Id_Anexo)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Id_Anexo)
                            </dd>
                        </dl>

                        <div>
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id_Normativa">Editar</a> |
                            <a class="btn btn-info" asp-action="Index">Regresar</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>