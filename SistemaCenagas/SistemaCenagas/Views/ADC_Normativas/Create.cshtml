@model SistemaCenagas.Models.ADC_Normativas

@{
    ViewData["Title"] = "Create";
}

<div class="main-container">

    <div class="navbar bg-white breadcrumb-bar">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Dashboard">Inicio</a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-controller="ADC_Actividades" asp-action="Index">Actividades ADC</a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-controller="ADC_Normativas" asp-action="Index">Normativas</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Crear</li>

            </ol>
        </nav>

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active" aria-current="page">
                    @(Global.usuario.Titulo + " " + Global.usuario.Nombre + " | " + (Global.usuario.Rol != null ? Global.usuario.Rol : "Sin asignación"))
                </li>
            </ol>
        </nav>

    </div>
    <div class="container">
        <div class="page-header mb-4">
            <div class="media">
                <div class="media-body ml-3">
                    <h2 class="mb-0"><b>@(Global.adc_actividad.Actividad)</b>: Crear normativa</h2>
                </div>
            </div>

        </div>
        <div class="card">
            <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane fade show active" role="tabpanel" id="profile">
                        <!--end of avatar-->
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input asp-for="Id_Actividad" value="@(Global.adc_actividad.Id_Actividad)" type="hidden" />
                            <input asp-for="Clave" value="@ViewBag.clave_normativa" type="hidden" />
                            <div class="form-group">
                                <label asp-for="Clave" class="control-label"></label>
                                <input asp-for="Clave" value="@ViewBag.clave_normativa" disabled class="form-control" />
                                <span asp-validation-for="Clave" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Responsable" class="control-label">Principal responsable</label>
                                <select asp-for="Responsable" class="form-control">
                                    <option>Proponente del cambio</option>
                                    <option>Director ejecutivo y/o residente</option>
                                    <option>Responsable de la administración del cambio</option>
                                    <option>Lider del equipo verificador</option>
                                    <option>Equipo verificador</option>

                                </select>
                                <span asp-validation-for="Responsable" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Descripcion" class="control-label"></label>
                                <textarea asp-for="Descripcion" class="form-control" required></textarea>
                                <span asp-validation-for="Descripcion" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Id_Anexo" class="control-label">Registro</label>
                                <select asp-for="Id_Anexo" class="form-control">
                                    @for (int i = 0; i < Global.anexos.Count(); i++)
                                    {
                                        <option value="@Global.anexos.ElementAt(i).Id_Anexo">@Global.anexos.ElementAt(i).Nombre</option>
                                    }

                                </select>
                                <span asp-validation-for="Id_Anexo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
