@model SistemaCenagas.Models.Etapa_Realizada

@{
    ViewData["Title"] = "Create";
}

<div class="modal fade" tabindex="-1" role="dialog" id="nuevoUsuario-modal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Agregar nueva etapa</h5>
                <a asp-action="Index" class="close btn btn-round">
                    <i class="material-icons">close</i>
                </a>
            </div>
            <!--end of modal head-->
            <div class="modal-body">
                
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group row align-items-center">
                        <label asp-for="Etapa" class="col-2" style="text-align:right;">Etapa</label>
                        <div class="col">
                            <input type="text" asp-for="Etapa" class="form-control" required/>
                        </div>
                        <span asp-validation-for="Etapa" class="text-danger"></span>
                    </div>
                    <div class="form-group row align-items-center">
                        <label asp-for="Avance" class="col-2" style="text-align:right;">Avance</label>
                        <div class="col">
                            <input type="text" asp-for="Avance" class="form-control" required/>
                        </div>
                        <span asp-validation-for="Avance" class="text-danger"></span>
                    </div>
                    <div class="modal-footer">

                        <button type="submit" id="submit_usuario" role="button" class="btn btn-success">
                            Crear
                        </button>
                        <a class="btn btn-dark" asp-action="Index">
                            Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
