@model SistemaCenagas.Models.Asignacion

@{
    ViewData["Title"] = "Create";
}

<div class="main-container">

    <div class="navbar bg-white breadcrumb-bar">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#">Principal</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="#">App Pages</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">User</li>
            </ol>
        </nav>

        <div class="dropdown">
            <button class="btn btn-round" role="button" data-toggle="dropdown" aria-expanded="false">
                <i class="material-icons">configuracion</i>
            </button>
            <div class="dropdown-menu dropdown-menu-right">
                <a href="nav-side-user.html" class="dropdown-item">Perfil</a>
                <a asp-controller="Home" asp-action="AccountSettings" class="dropdown-item">Configuración de la cuenta</a>
                <a asp-controller="Home" asp-action="LogOut" class="dropdown-item text-danger">Cerrar sesión</a>
            </div>
        </div>

    </div>
    <div class="container">
        <div class="page-header mb-4">
            <div class="media">
                <div class="media-body ml-3">
                    <h1 class="mb-0">Nuevo proyecto</h1>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane fade show active" role="tabpanel" id="profile">
                        <!--end of avatar-->
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <input type="hidden" asp-for="Id_Empleado" value="@ViewBag.idEmpleado" class="form-control" />
                                <span asp-validation-for="Id_Empleado" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Id_Proyecto" class="control-label">Proyecto</label>
                                <select asp-for="Id_Proyecto" class="form-control">
                                    @foreach (var p in ViewBag.listaProyectos)
                                    {
                                    <option value="@p.Id_Proyecto">@p.Folio_adc-@p.Nombre</option>
                                    }
                                </select>
                                <span asp-validation-for="Id_Proyecto" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group">
                                <label asp-for="Id_Residencia" class="control-label">Residencia</label>
                                <input asp-for="Id_Residencia" class="form-control" />
                                <span asp-validation-for="Id_Residencia" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Fecha_alta" class="control-label">Fecha de alta</label>
                                <input type="date" asp-for="Fecha_alta" class="form-control" />
                                <span asp-validation-for="Fecha_alta" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Fecha_baja" class="control-label">Fecha de baja</label>
                                <input type="date" asp-for="Fecha_baja" class="form-control" />
                                <span asp-validation-for="Fecha_baja" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Funcion" class="control-label"></label>
                                <input asp-for="Funcion" class="form-control" />
                                <span asp-validation-for="Funcion" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                            <div>
                                <a asp-action="Index">Back to List</a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
