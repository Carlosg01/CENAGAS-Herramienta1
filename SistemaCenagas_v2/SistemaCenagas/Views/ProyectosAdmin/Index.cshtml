
@{
    ViewData["Title"] = "Index";
}

<div class="main-container">

    <div class="navbar bg-white breadcrumb-bar">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Dashboard">Inicio</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Proyectos</li>

            </ol>
        </nav>

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active" aria-current="page">
                    @(Global.session_usuario.user.Titulo + " " + Global.session_usuario.user.Nombre + " | " + Global.session_usuario.Rol)
                </li>
            </ol>
        </nav>

    </div>
    
    <div class="container" data-filter-list="dropzone-previews">

        <div id="PlaceHolderHere"></div>

        <div class="page-header mb-4">
            <div class="row content-list-head">
                <div class="col-auto">
                    <h1>Proyectos</h1>
                </div>
                <button type="button" class="btn btn-lg btn-dark col-xs-12"
                        data-toggle="modal" data-target="#nuevoProyecto-modal" data-url="@Url.Action("Create")">
                    Nuevo <span class="material-icons">add</span>
                </button>
            </div>
        </div>

        @if (Global.vista_proyectos.Count() > 0)
        {
            <table id="example" class="table table-striped table-bordered" style="width:100%">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            Clave
                        </th>
                        <th>
                            Nombre
                        </th>
                        <th>
                            Descripción
                        </th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody class="dropzone-previews">
                    @foreach (var item in Global.vista_proyectos)
                    {
                        @if (item.Registro_Eliminado == 0)
                        {
                    <tr>
                        <td data-filter-by="text">
                            @(item.Clave)
                        </td>
                        <td data-filter-by="">
                            @(item.Nombre)
                        </td>
                        <td data-filter-by="">
                            @(item.Descripcion)
                        </td>
                        <td>
                            <a class="btn btn-dark form-control" asp-action="Edit" asp-route-id="@item.Id_Proyecto">Editar</a>
                        </td>
                        <td>
                            <a class="btn btn-dark form-control" asp-action="Details" asp-route-id="@item.Id_Proyecto">Detalles</a>
                        </td>
                        <td>
                            <a class="btn btn-danger form-control" asp-action="Delete" asp-route-id="@item.Id_Proyecto">Eliminar</a>
                        </td>
                    </tr>
                        }

                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="card card-note">
                
                <div class="card-body">
                    <p>No hay proyectos registrados</p>
                </div>
            </div>
        }

    </div>
</div>
