@model SistemaCenagas.Models.Usuarios

@{
    ViewData["Title"] = "Details";
}

<div class="main-container">

    <div class="navbar bg-white breadcrumb-bar">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Dashboard">Inicio</a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Detalles</li>
            </ol>
        </nav>

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active" aria-current="page">
                    @(Global.session_usuario.user.Titulo + " " + Global.session_usuario.user.Nombre + " | " + Global.session_usuario.Rol)
                </li>
            </ol>
        </nav>

    </div>
    <div class="container">
        <div class="page-header mb-4">
            <div class="row content-list-head">
                <div class="col-auto">
                    <h3>Detalles de usuario</h3>

                    <a class="btn btn-round" asp-action="Edit" asp-route-id="@Model.Id_Usuario">
                        <i class="material-icons">edit</i>
                    </a>
                </div>
            </div>

        </div>
        <div class="card">
            <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane fade show active" role="tabpanel" id="profile">
                        <!--end of avatar-->
                        <form>
                            <div class="form-group row align-items-center">
                                <label asp-for="Nombre" class="col-2" style="text-align:right;">Nombre(s)</label>
                                <div class="col">
                                    <input type="text" asp-for="Nombre" class="form-control" disabled />
                                </div>
                            </div>
                            <div class="form-group row align-items-center">
                                <label asp-for="Paterno" class="col-2" style="text-align:right;">Apellido paterno</label>
                                <div class="col">
                                    <input type="text" asp-for="Paterno" class="form-control" disabled />
                                </div>
                            </div>
                            <div class="form-group row align-items-center">
                                <label asp-for="Materno" class="col-2" style="text-align:right;">Apellido materno</label>
                                <div class="col">
                                    <input type="text" asp-for="Materno" class="form-control" disabled />
                                </div>
                            </div>
                            <div class="form-group row align-items-center">
                                <label asp-for="Titulo" class="col-2" style="text-align:right;">Titulo</label>
                                <div class="col">
                                    <input type="text" asp-for="Titulo" class="form-control" disabled />
                                </div>
                            </div>
                            <div class="form-group row align-items-center">
                                <label asp-for="Username" class="col-2" style="text-align:right;">Username</label>
                                <div class="col">
                                    <input type="text" asp-for="Username" class="form-control" disabled />
                                </div>
                            </div>
                            <div class="form-group row align-items-center">
                                <label asp-for="Password" class="col-2" style="text-align:right;">Contraseña</label>
                                <div class="col">
                                    <input type="text" asp-for="Password" class="form-control" disabled />
                                </div>
                            </div>
                            <div class="form-group row align-items-center">
                                <label class="col-2" style="text-align:right;">Rol</label>
                                <div class="col">
                                    <input type="text" value="@(Global.usuario.Rol)" class="form-control" disabled />
                                </div>
                            </div>
                            <div class="form-group row align-items-center">
                                <label asp-for="Estatus" class="col-2" style="text-align:right;">Estatus</label>
                                <div class="col">
                                    <input type="text" asp-for="Estatus" class="form-control" disabled />
                                </div>
                            </div>
                            <div class="form-group row align-items-center">
                                <label asp-for="Observaciones" class="col-2" style="text-align:right;">Observaciones</label>
                                <div class="col">
                                    <textarea type="text" asp-for="Observaciones" class="form-control" disabled ></textarea>
                                </div>
                            </div>


                            <hr>
                            <div class="form-group row align-items-center">
                                <div class="col-5">
                                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id_Usuario">Editar</a>
                                    <a class="btn btn-dark" asp-action="Index">Regresar</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>