
@{
    ViewData["Title"] = "Index";
}

<div class="main-container">

    <div class="navbar bg-white breadcrumb-bar">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Dashboard">Inicio</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Usuarios</li>

            </ol>
        </nav>

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active" aria-current="page">
                    @(Global.session_usuario.user.Titulo + " " + Global.session_usuario.user.Nombre + " | " + Global.session_usuario.Rol)
                </li>
            </ol>
        </nav>

    </div>

    <div id="PlaceHolderHere"></div>

    <div class="container">

        <div class="page-header mb-4">
            <div class="row content-list-head">
                <div class="col-auto">
                    <h1>Usuarios</h1>
                </div>
                <button type="button" class="btn btn-lg btn-dark col-xs-12"
                        data-toggle="modal" data-target="#nuevoUsuario-modal" data-url="@Url.Action("Create")">
                    Nuevo <span class="material-icons">add</span>
                </button>
            </div>
        </div>

        @if (Global.vista_usuarios.Count() > 0)
        {
            <table id="example" class="table table-striped table-bordered" style="width:100%">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            Nombre
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Rol
                        </th>
                        <th>
                            Estatus
                        </th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    
                    @foreach (var item in Global.vista_usuarios)
                    {
                        @if (item.user.Registro_Eliminado == 0)
                        {
                            <tr>
                                <td>
                                    @(item.user.Nombre + " " + item.user.Paterno + " " + item.user.Materno)
                                </td>
                                <td>
                                    @(item.user.Email)
                                </td>
                                <td>
                                    @(item.Rol)
                                </td>
                                <td>
                                    @(item.user.Estatus)
                                </td>
                                <td>
                                    <button class="btn btn-round" data-toggle="tooltip" title="Editar"
                                       asp-action="Edit" asp-route-id="@item.user.Id_Usuario">
                                        <span data-title="" class="material-icons">edit</span>
                                    </button>
                                </td>
                                <td>
                                    <a class="btn btn-round" data-toggle="tooltip" title="Detalles"
                                       asp-action="Details" asp-route-id="@item.user.Id_Usuario">
                                        <span data-title="" class="material-icons">assignment</span>
                                    </a>
                                </td>
                                <td>
                                    <a class="btn btn-round" data-toggle="tooltip" title="Eliminar"
                                       asp-action="Delete" asp-route-id="@item.user.Id_Usuario">
                                        <span data-title="" class="material-icons">delete</span>
                                    </a>                                    
                                </td>
                            </tr>
                        }

                    }
                </tbody>

            </table>
        }
        else
        {
            <label class="control-label">No hay usuarios registrados</label>
        }

    </div>
</div>
